{
  "name": "@wikimedia/wvui-next",
  "author": "Wikimedia",
  "description": "Rebuild of WVUI using Vue 3 and Vite",
  "version": "0.0.0",
  "keywords": [
    "Vue.js",
    "components",
    "Wikipedia",
    "MediaWiki",
    "Wikimedia",
    "TypeScript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/catrope/wvui-next"
  },
  "license": "GPL-2.0+",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "test": "npm run lint && npm run unit",
    "lint": "eslint --max-warnings 0 . && tsc --noEmit",
    "unit": "jest -c .jest/jest.config.json"
  },
  "main": "./dist/wvui-vite.umd.js",
  "module": "./dist/wvui-vite.es.js",
  "exports": {
    ".": {
      "import": "./dist/wvui-vite.es.js",
      "require": "./dist/wvui-vite.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-replace": "^2.4.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.6",
    "@vue/test-utils": "^2.0.0-rc.2",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "eslint": "^7.21.0",
    "eslint-config-wikimedia": "^0.18.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-no-jquery": "^2.5.0",
    "jest": "^26.6.3",
    "less": "^4.1.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2",
    "vite": "^2.0.4",
    "vue": "^3.0.7",
    "vue-jest": "^5.0.0-alpha",
    "wikimedia-ui-base": "^0.18.1"
  }
}

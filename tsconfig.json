{
	"compilerOptions": {
		"declaration": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"strict": false,
		"sourceMap": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"vite/client",
			"jest"
		],
		"plugins": [
			{
				"name": "@vuedx/typescript-plugin-vue"
			}
		],
		"baseUrl": ".",
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"src/**/*.snap.ts"
	]
}